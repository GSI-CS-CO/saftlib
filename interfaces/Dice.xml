<node xmlns:xi="http://www.w3.org/2001/XInclude" name="Dice">
  <annotation name="de.gsi.saftlib.name" value="de.gsi.saftlib"/>

  <!-- Random number generator for API investigation only
       connects to saftd without etherbone
 -->

  <!-- de.gsi.saftlib.Dice:
      @short_description: Random number generator
   -->
  <interface name="de.gsi.saftlib.Dice">


    <!--Synchronous method
        Roll:    roll die immediately
        @score:   score
      -->
    <method name="Roll">
      <arg direction = "out" name="score" type="u"/>
    </method>

    <!-- Asynchronous method
    RollMultiple: the die is slowly cast several times and summed
    @count:                    dice rolls
    A Rolled signal is generated when complete
      -->
    <method name="RollMultiple">
      <arg direction = "in" name="count" type="u"/>
    </method>

    <!-- Rolled:  signal generated by RollMultiple
         @score:  total score
         @count:  dice rolled
      -->
    <signal name="Rolled">
      <arg name="score"                     type="u"/>
      <arg name="count"                     type="u"/>
    </signal>

    <!-- Count: total number of dice rolled
      -->
    <property name="Count" type="u" access="read">
    </property>

    <!-- Average: score per die roll
      -->
    <property name="Average" type="d" access="read">
    </property>

    <!-- UpperLimit: maximum possible score
      -->
    <property name="UpperLimit" type="u" access="readwrite">
    </property>

    <!-- Version: version name, compile-time constant-->
    <property name="Version" type="s" access="read">
      <annotation name="org.freedesktop.DBus.Property.EmitsChangedSignal" value="const"/>
    </property>

    <!-- Seed: random number seed, run-time constant -->
    <property name="Seed" type="u" access="read">
      <annotation name="org.freedesktop.DBus.Property.EmitsChangedSignal" value="const"/>
    </property>

  </interface>
</node>
